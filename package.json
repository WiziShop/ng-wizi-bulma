{
  "name": "@wizishop/ng-wizi-bulma",
  "version": "13.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng build ng-wizi-bulma && npm run block-scss  && concurrently \"npm run watch-scss\"  \"ng serve\"",
    "build:lib": "ng build ng-wizi-bulma --configuration production && npm run block-scss && cp README.md dist/@wizishop/ng-wizi-bulma",
    "build:demo": "ng build ng-wizi-bulma-demo --configuration production",
    "build": "rm -rf dist && npm run build:lib && npm run build:demo",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "deploy": "npm run build && firebase deploy",
    "publish:npm": "rm -rf dist &&  npm run build:lib && cd dist/@wizishop/ng-wizi-bulma && npm publish --access public && cd ../../../",
    "publish:npm:next": "rm -rf dist &&  npm run build:lib && cd dist/@wizishop/ng-wizi-bulma && npm publish --access public --tag next && cd ../../../",
    "publish": "npm run deploy && npm run publish:npm",
    "precommit": "pretty-quick --staged",
    "prepack": "npm run build:lib",
    "watch-scss": "nodemon --watch './projects/ng-wizi-bulma/src/**/*.scss' -e scss -d 1 -x \"npm run block-scss\" ",
    "block-scss": "node ./scripts/scss-bundle.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "13.0.2",
    "@angular/cdk": "13.0.2",
    "@angular/common": "13.0.2",
    "@angular/compiler": "13.0.2",
    "@angular/core": "13.0.2",
    "@angular/forms": "13.0.2",
    "@angular/platform-browser": "13.0.2",
    "@angular/platform-browser-dynamic": "13.0.2",
    "@angular/router": "13.0.2",
    "bulma": "^0.9.3",
    "bulma-calendar": "git+https://github.com/WiziShop/bulma-calendar.git",
    "bulma-extensions": "^6.2.7",
    "bundle-scss": "^1.5.0",
    "colors": "^1.4.0",
    "rxjs": "^7.4.0",
    "tslib": "^2.3.1",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.0.3",
    "@angular-devkit/schematics": "^13.0.3",
    "@angular/cli": "^13.0.3",
    "@angular/compiler-cli": "13.0.2",
    "@angular/language-service": "13.0.2",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "^2.0.8",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "concurrently": "^6.4.0",
    "husky": "^7.0.4",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.14",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^13.0.6",
    "nodemon": "^2.0.6",
    "prettier": "2.4.1",
    "pretty-quick": "^3.1.2",
    "protractor": "~7.0.0",
    "ts-node": "~7.0.1",
    "tslint": "~6.1.0",
    "typescript": "~4.4.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
