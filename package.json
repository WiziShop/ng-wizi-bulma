{
  "name": "@wizishop/ng-wizi-bulma",
  "version": "17.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng build ng-wizi-bulma && npm run block-scss  && concurrently \"npm run watch-scss\"  \"ng serve\"",
    "build:lib": "ng build ng-wizi-bulma --configuration production && npm run block-scss && cp README.md dist/@wizishop/ng-wizi-bulma",
    "build:demo": "ng build ng-wizi-bulma-demo --configuration production",
    "build": "rm -rf dist && npm run build:lib && npm run build:demo",
    "test": "ng test",
    "lint": "ng lint",
    "deploy": "npm run build && firebase deploy",
    "publish:npm": "rm -rf dist &&  npm run build:lib && cd dist/@wizishop/ng-wizi-bulma && npm publish --access public && cd ../../../",
    "publish:npm:next": "rm -rf dist &&  npm run build:lib && cd dist/@wizishop/ng-wizi-bulma && npm publish --access public --tag next && cd ../../../",
    "publish": "npm run deploy && npm run publish:npm",
    "precommit": "pretty-quick --staged",
    "prepack": "npm run build:lib",
    "watch-scss": "nodemon --watch './projects/ng-wizi-bulma/src/**/*.scss' -e scss -d 1 -x \"npm run block-scss\" ",
    "block-scss": "node ./scripts/scss-bundle.js",
    "ng:update": "ng update @angular/cli @angular/core @angular/cdk @angular-eslint/schematics prettier husky --allow-dirty"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "17.1.0",
    "@angular/cdk": "^17.1.0",
    "@angular/common": "17.1.0",
    "@angular/compiler": "17.1.0",
    "@angular/core": "^17.1.0",
    "@angular/forms": "17.1.0",
    "@angular/platform-browser": "17.1.0",
    "@angular/platform-browser-dynamic": "17.1.0",
    "@angular/router": "17.1.0",
    "bulma": "^0.9.4",
    "bulma-calendar": "git+https://github.com/WiziShop/bulma-calendar.git",
    "bulma-extensions": "^6.2.7",
    "bundle-scss": "^1.5.1",
    "colors": "^1.4.0",
    "rxjs": "^7.4.0",
    "tslib": "^2.3.1",
    "zone.js": "^0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.1.0",
    "@angular-devkit/schematics": "^17.1.0",
    "@angular-eslint/builder": "^17.2.1",
    "@angular-eslint/eslint-plugin": "^17.2.1",
    "@angular-eslint/eslint-plugin-template": "^17.2.1",
    "@angular-eslint/schematics": "^17.2.1",
    "@angular-eslint/template-parser": "^17.2.1",
    "@angular/cli": "^17.1.0",
    "@angular/compiler-cli": "17.1.0",
    "@angular/language-service": "17.1.0",
    "@types/jasmine": "^4.3.0",
    "@types/jasminewd2": "^2.0.8",
    "@types/node": "^18.11.10",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "husky": "^8.0.3",
    "jasmine-core": "^4.5.0",
    "jasmine-spec-reporter": "^7.0.0",
    "karma": "^6.4.1",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.0.0",
    "ng-packagr": "^17.1.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "pretty-quick": "^4.0.0",
    "protractor": "~7.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
